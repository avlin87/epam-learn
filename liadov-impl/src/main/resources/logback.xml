<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{54} &lt;%M&gt; - %msg%n</Pattern>
        </encoder>
    </appender>

    <appender name="AOP_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d{HH:mm:ss.SSS} [%thread] %msg%n</Pattern>
        </encoder>
    </appender>

    <logger name="com.epam.liadov.LoggingBean" level="trace" additivity="false">
        <appender-ref ref="AOP_CONSOLE"/>
    </logger>

    <logger name="com.epam.liadov" level="trace" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="org.hibernate.SQL" level="info" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="org.hibernate.type.descriptor.sql" level="debug" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

</configuration>