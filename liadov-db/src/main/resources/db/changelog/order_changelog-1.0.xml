<?xml version="1.0" encoding="ISO-8859-1"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet author="Aleksandr Liadov" id="order_changelog-1.0">
        <createTable tableName="order">
            <column name="OrderId" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="OrderNumber" type="varchar(10)">
                <constraints nullable="true" primaryKey="false" unique="true"/>
            </column>
            <column name="CustomerId" type="int">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="OrderDate" type="timestamp">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="TotalAmount" type="decimal(12,2)">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="order"
                                 baseColumnNames="CustomerId"
                                 constraintName="fk_Order_Customer"
                                 referencedTableName="Customer"
                                 referencedColumnNames="CustomerId"
                                 onUpdate="CASCADE"
                                 onDelete="CASCADE"/>

        <loadData catalogName="orderData"
                  commentLineStartsWith="//"
                  file="loadData/OrderData.csv"
                  quotchar="'"
                  relativeToChangelogFile="true"
                  schemaName="liadov"
                  separator=","
                  tableName="order"
                  usePreparedStatements="true">
            <column header="ordernumber"
                    name="OrderNumber"
                    type="STRING"/>
            <column header="customerid"
                    name="CustomerId"
                    type="NUMERIC"/>
            <column header="orderdate"
                    name="OrderDate"
                    type="Date"/>
            <column header="totalamount"
                    name="TotalAmount"
                    type="NUMERIC"/>
        </loadData>
    </changeSet>
</databaseChangeLog>